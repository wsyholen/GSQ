<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sixtyrobbers.GSQ.fourm.dao.forum.UserDAO">

    <insert id="addUser" parameterType="com.sixtyrobbers.GSQ.fourm.dao.entity.fourm.param.RegisterParam">
        insert into
        gsq_fourm_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                user_id,
            </if>
            <if test="account !=null and account != ''">
                login_phone,
            </if>
            <if test="password != null and password != ''">
                login_password,
            </if>
            <if test="name !=null and name != ''">
                user_name
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">
                #{id, jdbcType=VARCHAR},
            </if>
            <if test="account != null and account != ''">
            #{account, jdbcType=VARCHAR},
            </if>
            <if test="password != null and password != ''">
                #{password, jdbcType=VARCHAR},
            </if>
            <if test="name != null and name != ''">
                #{name, jdbcType=VARCHAR}
            </if>
        </trim>
    </insert>
    <select id="findUsersByLoginPhone" parameterType="java.lang.String" resultType="com.sixtyrobbers.GSQ.fourm.dao.entity.fourm.dbdo.UserDO" >
		select * from gsq_fourm_user
		where login_phone=#{loginPhone}
	</select>
    <update id="modifyPasswordByLoginPhone" parameterType="com.sixtyrobbers.GSQ.fourm.dao.entity.fourm.dbdo.UserDO">
        update
        gsq_fourm_user
        set login_password = #{loginPassword}
        where login_phone = #{loginPhone}
    </update>


</mapper>